{
  "manifest_version": 2,
  "name": "tango",
  "description": "bla, bla",
  "version": "1.0",
  "browser_action": {
    "default_icon": "img/tango-icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "css/tango.css"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "settings.html",
  "permissions" : [
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "css/tango.css"
  ]
}
